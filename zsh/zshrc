# Set up the prompt

autoload -Uz promptinit
promptinit
prompt adam1

setopt histignorealldups sharehistory

# Use modern completion system
autoload -Uz compinit
compinit -u

bindkey -v
bindkey '^R' history-incremental-search-backward
alias rsp='rsync -vP'

case $(uname) in
    Darwin)
        alias ls='ls -G' ;;
    Linux)
        alias ls='ls --color' ;;
esac
